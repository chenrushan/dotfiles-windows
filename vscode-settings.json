{
    // basic
    "window.zoomLevel": 1,
    "editor.cursorBlinking": "solid",

    // vim
    "vim.leader": ",",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-f>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorRight",
                    "args": []
                }
            ]
        },
        {
            "before": ["<C-e>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorEnd",
                    "args":[]
                }
            ]
        },
        {
            "before": ["<C-b>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorLeft",
                    "args":[]
                }
            ]
        }
    ],

    // python
    "python.pythonPath": "C:\\ProgramData\\Anaconda3\\python.exe",
    "python.linting.pylintPath": "C:\\ProgramData\\Anaconda3\\Scripts\\pylint.exe",
    "python.workspaceSymbols.ctagsPath": "C:\\cygwin64\bin\\ctags.exe",
    "workbench.startupEditor": "none",
    "python.jediPath": "C:\\ProgramData\\Anaconda3\\Lib\\site-packages",
    "editor.lineHeight": 17,
    "workbench.colorTheme": "Monokai",
    "terminal.integrated.shell.windows": "C:\\Cygwin64\\bin\\bash.exe",
    "terminal.integrated.shellArgs.windows": [],

    // C/C++
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.errorSquiggles": "Disabled" // 没有这个配置会看到一些莫名其妙的错误
}